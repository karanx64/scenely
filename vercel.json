{
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://scenely-ohuj.onrender.com/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/dist/index.html"
    }
  ],
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/dist"
      }
    }
  ]
}
